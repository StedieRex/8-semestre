#include <16F877A.h>
#fuses XT, NOWDT
#use delay (clock = 4000000)
//configuracion del puerto a
#BYTE TRISA = 0X85
#BYTE PORTA = 0X05
#BYTE OPTION_REG= 0X81
//configuracion del puerto b
#BYTE TRISB = 0X86
#BYTE PORTB = 0X06
#BYTE OPTION_REG= 0X81

void main()
{
   bit_clear(OPTION_REG,7);
   bit_set(TRISA,0);
   bit_clear(TRISA,1);
   bit_clear(PORTA,1);
   
   bit_clear(OPTION_REG,7);
   bit_set(TRISB,0);
   bit_clear(TRISB,1);
   bit_clear(PORTB,1);
   
   while(1){
     if(bit_test(PORTA,0)==1 && bit_test(PORTA,1)==1)
         bit_set(PORTA,0);
     else
         bit_clear(PORTA,0);
   }  
}

